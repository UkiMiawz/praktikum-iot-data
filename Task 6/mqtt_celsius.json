{
  "name": "WeatherStation",
  "ttl": 120,
  "resources": [
    {
      "type": "Resource",
      "name": "Thermometer",
      "agent": {
        "type": "service",
        "dir": null,
        "exec": "/home/pi/code/mqtt_celsius.sh"
      },
      "protocols": [
        {
          "type": "MQTT",
          "methods": [
            "PUB"
          ],
          "content-types": [
            "text/plain"
          ],
          "pub_topic": "groupB/temperature"
        }
      ]
    },{
      "type": "Resource",
      "name": "Voltage",
      "agent": {
        "type": "service",
        "dir": null,
        "exec": "/home/pi/code/mqtt_voltage.sh"
      },
      "protocols": [
        {
          "type": "MQTT",
          "methods": [
            "PUB"
          ],
          "content-types": [
            "text/plain"
          ],
          "pub_topic": "groupB/voltage"
        }
      ]
    }
  ]
}


